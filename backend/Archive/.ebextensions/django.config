option_settings:
  aws:elasticbeanstalk:container:python:
    WSGIPath: vugle_health.wsgi:application

Resources:
  AWSEBV2LoadBalancerListener443:
    Type: AWS::ElasticLoadBalancingV2::Listener
    Properties:
      DefaultActions:
        - Type: forward
          TargetGroupArn: {"Ref": "AWSEBV2TargetGroup"}
      LoadBalancerArn: {"Ref": "AWSEBV2LoadBalancer"}
      Port: 443
      Protocol: HTTPS
      Certificates:
        - CertificateArn: arn:aws:acm:us-east-2:443370716425:certificate/d999a637-aec8-4e93-a6c4-9d31f9b7ce64  # Update with your ACM certificate ARN

  AWSEBAutoScalingGroup:
    Type: AWS::AutoScaling::AutoScalingGroup
    Properties:
      MinSize: 1
      MaxSize: 4
      LaunchTemplate:
        LaunchTemplateName: vugle-template
        Version: $Default
